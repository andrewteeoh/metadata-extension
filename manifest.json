{
  "manifest_version": 2,

  "name": "Metadata Display",
  "description": "This extension displays the html and open graph metadata for a page",
  "version": "0.1",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "activeTab"
  ]
}